<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mobb" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>Mob</name>
  
  
  <!--
  really crazy settings are possible
    w/o any work
    
    the best reference is:
      http://devgirl.org/files/config-app/
  -->
  
  
	<description>
		mob
	</description>

	<author email="support@supercoolmob.com" href="support@supercoolmob.com">
    mob
	</author>

	<content src="index.html" />
	<access origin="*" />

  <preference name="Orientation" value="portrait" />
  <preference name="BackgroundColor" value="0xff0000ff"/>
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="AutoHideSplashScreen" value="false" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarStyle" value="lightcontent" />  
  <preference name="android-minSdkVersion" value="23" />
  <preference name="KeyboardDisplayRequiresUserAction" value="false"/>
  <preference name="MediaPlaybackRequiresUserAction" value="true"/> -->
  <preference name="AllowInlineMediaPlayback" value="true"/>
